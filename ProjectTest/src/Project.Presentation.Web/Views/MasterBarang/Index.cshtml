@model Project.Presentation.Web.Models.BarangViewModel

<h1>Master Barang</h1>
<a asp-action="Insert" class="btn btn-success">Insert</a>
<table class="table">
    <tr>
        <th>Kode Barang</th>
        <th>Nama Barang</th>
        <th>Supplier</th>
        <th>Harga</th>
        <th>Stok Barang</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model.Barang)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.NamaBarang</td>
            <td>@item.NamaSupplier</td>
            <td>@item.Harga</td>
            <td>@item.StokBarang</td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
            </td>
        </tr>
    }
</table>
