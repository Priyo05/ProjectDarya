@model Project.Presentation.Web.Models.RequestBarangViewModel

<h1>Request Barang</h1>

<hr />

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Insert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nama Divisi</label>
                <input asp-for="NamaDivisi" class="form-control" />
                <span asp-validation-for="NamaDivisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nama Barang</label>
                <select asp-for="KodeBarang" asp-items="Model.Barang" class="form-control">
                    <option value="">Pilih barang</option>
                </select>
                <span asp-validation-for="KodeBarang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Jumlah</label>
                <input asp-for="Jumlah" class="form-control" />
                <span asp-validation-for="Jumlah" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Request" class="btn btn-primary mt-2 mb-2" />
            </div>
        </form>
    </div>
</div>

