@model Project.Presentation.Web.Models.RequestBarangIndexViewModel


<h1>Approval</h1>

<table class="table">
    <tr>
        <th>Request Id</th>
        <th>Nama Divisi</th>
        <th>Kode Barang</th>
        <th>Nama Barang</th>
        <th>Jumlah</th>
        <th>Tanggal Request</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model.RequestBarang)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.NamaDivisi</td>
            <td>@item.KodeBarang</td>
            <td>@item.NamaBarang</td>
            <td>@item.Jumlah</td>
            <td>@item.RequestDate</td>
            <td>
                <a asp-action="Approved" asp-route-id="@item.Id" class="btn btn-primary" onclick="return confirm('Are you sure you want to approve this?')">Approved</a>
                <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to reject this?')">Reject</a>
            </td>
        </tr>
    }
</table>
